<div class=" col-md-11 container  mt-5  me-2 ms-2" style=" ">

  <h3>Truyện tương tự</h3>
  <hr>
    <div class="row container">
        @if (mangaList != null)
        {
            foreach (var manga in mangaList)
            {

                var urlImage = $"https://otruyenapi.com/uploads/comics/{manga.Thumb_url}";
                <div class="  col-3 col-sm-2 col-md-2 col-lg-1 mb-3">
                    <div class="card-cus card position-relative custom-border custom-shadow" style=" width: 6em; height: 170px;">

                        @* <div class="card-background" >
                                style="  background-image: url('@urlImage')">
                            </div> *@

                        <img class="custom-border custom-shadow mt-2" src="@urlImage" alt="@manga.Name" style="width: 100%; height: 70%; object-fit: cover;" />

                        <a class="card-body position-absolute"
                            style="bottom: 0; left: 0; text-decoration:none; color: black; width: 100%; height: 60px;  padding-top: 15px; padding-left: 2px; padding-right: 2px;"
                            asp-area="DetailsManga" asp-controller="DetailsManga" asp-action="Index">
                            <p style="font-size: 12px;font-weight: 500;" class="card-title w-100 text-left">@manga.Name</p>
                           
                        </a>
                    </div>
                </div>
                <br>

            }
        }

    </div>

</div>
  </div>




