@{
    ViewData["Title"] = "Trang thể Loại";
    var mangaList = ViewBag.MangaList as List<BTL_WebManga.Models.ComicModel>;
    var categoryList = ViewBag.CategoryList as List<CategoryListModel>;
}



    <!-- Truyện Nổi Bật -->
    <div class="container-fluid col-md-10 mt-4" style="padding-left: 10rem; padding-right: 10rem;">
        <!-- Chỉnh px-3 để có padding nhỏ 2 bên -->
        <!-- Tiêu đề -->
        <div class="mb-3">
            <h2 class="fw-bold">Thể loại</h2>
        </div>

        <!-- Carousel -->
        <div style="margin-top: -50px;" class="col-md-2 ">
            <div style="margin-top: 100px; color: #fff;">
                <h5 class="text-center mb-4">Lọc Thể Loại</h5>

            @if (categoryList != null) {
                <div class="form-group">
                    <!-- Nhóm Checkbox -->
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="anime">
                        <label class="form-check-label" for="anime">Anime</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="drama">
                        <label class="form-check-label" for="drama">Drama</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="shounen">
                        <label class="form-check-label" for="shounen">Shounen</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="manhwa">
                        <label class="form-check-label" for="manhwa">Manhwa</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="romance">
                        <label class="form-check-label" for="romance">Romance</label>
                    </div>
                    <div class="form-check mb-2">
                        <input type="checkbox" class="form-check-input" id="action">
                        <label class="form-check-label" for="action">Action</label>
                    </div>
                    <!-- Thêm thể loại khác -->
                </div>
            }
                

                <!-- Nút Áp dụng Lọc -->
                <div class="d-grid mt-3">
                    <button class="btn btn-light btn-sm" type="button">Áp dụng lọc</button>
                </div>
            </div>
        </div>
        <div class="container-fluid mt-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="fw-bold">Danh Sách Truyện</h2>
            </div>

            <!-- Danh sách truyện -->
            <div class="row row-cols-2 row-cols-sm-3 row-cols-md-4 row-cols-lg-6 g-3">
                @if (mangaList != null)
                {
                    foreach (var manga in mangaList)
                    {
                        var urlImage = $"https://otruyenapi.com/uploads/comics/{manga.Thumb_url}";
                        <div class="col">
                            <a class="card h-100 border-0 shadow-sm" asp-controller="DetailsManga" asp-action="Index">
                                <img src="@urlImage" class="card-img-top rounded" alt="@manga.Name" style="height: 100%; object-fit: cover;">
                                <div class="card-body p-2 text-center d-flex flex-column justify-content-between">
                                </div>
                                <div class="card-body p-2">
                                    <h6 class="card-title text-truncate mb-0" style="font-size: 16px; word-wrap: break-word; overflow: hidden; ">@manga.Name</h6>
                                </div>
                            </a>
                        </div>
                    }
                }
            </div>
        </div>

        <!-- Phân trang -->
       
</div>

