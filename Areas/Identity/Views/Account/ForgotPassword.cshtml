@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Lấy lại mật khẩu?";
    Layout = "_Layoutt_Login";
}

<div class="container row">
     <div class="col-md-3"></div>

<div class="col-md-6 form">
    <h1 class="mt-3  mb-0 30px title" style="font-size: 30px;">@ViewData["Title"]</h1>


<div class="mt-4">
    <div class="">
        <h4>Nhập địa chỉ email của tài khoản.</h4>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="title m-0" style="font-size: 15px;" asp-for="Email"></label>
                <input asp-for="Email" class="form-control input" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn button-confirm m-2 mt-4">Gửi</button>
        </form>
    </div>
</div>


@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
</div>
 <div class="col-md-3"></div>
</div>

