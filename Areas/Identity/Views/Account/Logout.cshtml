@using Microsoft.AspNetCore.Identity
@using Manga.Models
@inject SignInManager<MangaUser> SignInManager
@inject UserManager<MangaUser> UserManager



<div class="p-3">
    <h2>Chắc chắn đăng xuất?</h2>

    <div class="d-flex">

        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-controller="Account" asp-action="Logout"
            asp-route-returnUrl="@Url.Page("/Index", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-danger">Đăng xuất</button>
        </form>

        <a style="text-decoration: none;" asp-controller="Home" asp-action="Index" asp-area="">Về trang chủ</a>

    </div>

</div>
