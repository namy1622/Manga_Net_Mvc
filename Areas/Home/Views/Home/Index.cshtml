@{
    ViewData["Title"] = "Trang chủ";
}

@{
    var imgUrl = "https://www.gettyimages.in/gi-resources/images/Homepage/Hero/UK/CMS_Creative_164657191_Kingfisher.jpg";

    var mangaList = ViewBag.MangaList as List<Manga.Home.Models.InfoMangaModels>;
    @* var ogImages = ViewBag.OgImages as List<Manga.Home.Models.SeoOnPage>; *@

}


<div class="row">

    <div style="background: #21A691; margin-top: -50px;" class="col-md-2 ">
        <div style="margin-top: 100px">
            Phần lọc phim, chọn thể loại truyện
        </div>
    </div>

    <div class=" col-md-10 container d-flex mt-3" style=" justify-content: center;">
        <div class="row justify-content-center">
            @if (mangaList != null)
            {
                foreach (var manga in mangaList)
                {

                    var urlImage = $"https://otruyenapi.com/uploads/comics/{manga.Thumb_url}";
                    <div class="col-10 col-sm-5 col-md-3 col-lg-2 mb-3">
                        <div class="card-cus card position-relative" style=" width: 11em; height: 230px;">

                            @* <div class="card-background" >
                                style="  background-image: url('@urlImage')">
                            </div> *@

                            <img src="@urlImage" alt="@manga.Name" style="width: 100%; height: 70%; object-fit: cover;" />
                            
                            <a class="card-body position-absolute"
                                style="bottom: 0; left: 0; text-decoration:none; color: black; width: 100%; height: 60px;  padding-top: 0px; padding-left: 5px; padding-right: 5px;"
                                 asp-area="DetailsManga" asp-controller="DetailsManga" asp-action="Index">
                                <p style="font-size: 14px;font-weight: 600;" class="card-title w-100 text-left">@manga.Name</p>
                                @* <p class="card-text">@manga.Slug</p> *@
                                @* <a href="#" class=" btn-i btn">Click Card</a> *@
                            </a>
                        </div>
                    </div>
                    <br>

                }
            }

        </div>
    </div>


    @* <div class="col-md-1">

    </div> *@

</div>
